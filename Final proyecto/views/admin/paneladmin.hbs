<div class="bienvenidausuario">
  <h2>Hola {{adminusuario}}</h2>
  <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesion <i class="fas fa-sign-out-alt"></i></a>
</div>

<br>

<div class="titulo-paneladmin">
  <h1>Lista de ofertas del mes</h1>
</div>
<div class="agregar-buscar">
  <div>
    <a href="/admin/paneladmin/agregar"><i class="fa fa-plus-square" aria-hidden="true"></i> Agregar novedad</a>
  </div>

  <div>
    <form action="/admin/paneladmin" method="get">
      <input class="search" type="search" placeholder="Buscar" name="q" {{#if q}} value="{{q}}" {{/if}}>
      <button class="btn-comprar" type="submit"><i class="fa fa-search"></i></button>
    </form>
  </div>

</div>

<br>


<div id="containertable">

  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>foto</th>
        <th>tipo de instrumento</th>
        <th>marca</th>
        <th>descripcion</th>
        <th>precio</th>
        <th>borrar</th>
        <th>editar</th>
      </tr>
    </thead>
    <tbody>
      {{#each novedades}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{{foto}}}</td>
        <td>{{tipo}}</td>
        <td>{{marca}}</td>
        <td>{{descripcion}}</td>
        <td>{{precio}}</td>
        <td>
          <a href="/admin/paneladmin/eliminar/{{id}}" class="btn btn-secondary">
            <i class="fa fa-trash"></i>
          </a>
        </td>
        <td>
          <a href="/admin/paneladmin/modificar/{{id}}">
            <i class="fas fa-pen"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{#if is_search}}
    {{#unless novedades.length}}
       <p>No se encontaron resultados para "{{q}}" </p>
     {{/unless}}
  {{/if}}

</div>